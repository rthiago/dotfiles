label-warn-foreground = ${colors.secondary}

ramp-0 = ‚ñÅ
ramp-1 = ‚ñÑ
ramp-2 = ‚ñà
ramp-foreground = ${colors.foreground-alt}

[module/load]
type = custom/script
exec = cat /proc/loadavg | awk '{ print $1, $2, $3 }'
interval = 5
format-underline = #d79921
format-prefix = "‚àû "

